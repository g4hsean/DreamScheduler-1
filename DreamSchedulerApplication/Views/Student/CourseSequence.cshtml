@model DreamSchedulerApplication.Models.CourseSequence

@{
    ViewBag.Title = "CourseSequence";
}

<h2>CourseSequence</h2>

<table class="table">

    <caption style="margin-bottom: 30px; font-weight: bold">Course sequence</caption>
    <tr>
        <th>
            Semester
        </th>
        <th>
            Course Code
        </th>
        <th>
            Title
        </th>
        <th>
            Credits
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.CourseList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterInSequence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
            <!--
                @Html.ActionLink("Edit", "Edit", new { id = item.Code }) |
                @Html.ActionLink("Details", "Details", new { id = item.Code }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Code })
            -->
            </td>
        </tr>
    }

</table>