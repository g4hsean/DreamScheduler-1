@model System.Collections.Generic.List<DreamSchedulerApplication.Models.Sequence.CourseEntry>

@{
    ViewBag.Title = "Custom Course Sequence";
}

<h2>Course Sequence</h2>

<table class="table">

    <caption style="margin-bottom: 30px; font-weight: bold">Course sequence</caption>
    <tr>
        <th>
            Semester season
        </th>
        <th>
            Title
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SemesterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Code)
            </td>
            <td>
                @Html.ActionLink("Details", "CourseDetails", "Student", new { code = item.Course.Code, semesterName = item.SemesterName }, null)
            </td>
        </tr>
    }

</table>

<input type="button" value="Generate New Schedule" onclick="location.href='@Url.Action("ResetCustomSequence", "SequenceGenerator")'" />
