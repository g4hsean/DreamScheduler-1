@model DreamSchedulerApplication.Models.AcademicRecord
@{
    ViewBag.Title = "AccountEDIT";
}

<h2>Account EDIT Page</h2>


@using (Html.BeginForm("Index", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Modify your information</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <fieldset>
        <div>
            @Html.HiddenFor(model => model.Student.StudentID) <!--hidenFor is used when you need keep data private and still past using submit-->
        </div>
        <div>
            @Html.HiddenFor(model => model.Student.GPA)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Student.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Student.FirstName, new { htmlAttributes = new { @class = "form-control" }, })
                @Html.ValidationMessageFor(model => model.Student.FirstName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Student.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Student.LastName, new { htmlAttributes = new { @class = "form-control" }, })
                @Html.ValidationMessageFor(model => model.Student.LastName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    </fieldset>
}

